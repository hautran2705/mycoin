  <script>
    function getCookie(name) {
      const value = `; ${document.cookie}`;
      const parts = value.split(`; ${name}=`);
      if (parts.length === 2) return parts.pop().split(';').shift();
    }

    const accessToken = getCookie('accessToken');
    window.onload = function () {
      $.ajax({
        url: 'http://localhost:3000/user/getamount',
        type: 'GET',
        headers:{ "x-access-token": accessToken},
        contentType: 'application/json'
      }).done(function(data) {
        if (!data.authenticated){
          window.location = "/login"
        }

        for (t of data.addressTransactions) {
          const tr = `<tr>
                      <td style="max-width: 400px;overflow: hidden">${t.sender}</td>
                      <td style="max-width: 400px;overflow: hidden">${t.recipient}</a></td>
                      <td>${t.amount}</td>
                      <td>${t.date}</td>
                      </tr>`;
          $('#transactionscontainer').prepend(tr);
        }
        $('#table').dataTable( {
                    "pageLength" : 10,
                    "lengthChange": false,
                    "info": false
                } );
        console.log(data.addressBalance);

        $('#amount').text("Your amount:\t" + data.addressBalance)
        $('#publickey').text("Your public key:\t" + data.publickey)
      })
    }

    $('#logout').on('click', function () {
      document.cookie = "accessToken="+"";
      window.location = "/login"
            
      });
  </script>
